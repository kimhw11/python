import tkinter as tk

window = tk.Tk()

window.title("미세먼지 마스크")
window.geometry("750x450+100+100") #창의 가로 세로 길이
window.resizable(False,False) #창의 크기 조절]


#(1) 지역선택할 버튼
#(2) 미세먼지, 초미세먼지등의 데이터
#(3) 각각의 마우스를 선택할 기준표
#(4) 마스크 이미지를 보여줄 공간
#(5) 결과를 보여주기


# frame = tk.Frame(window, relief='solid',bd=1)
# frame.pack(side='top',fill='both',expand=True)

frame1 = tk.Frame(window, relief='solid',bd= 1, height=270)
frame1.pack(side='top', fill='both', expand=True)

frame2 = tk.Frame(window, relief='solid',bd=1, height=50)
frame2.pack(side='bottom', fill='both', expand=True)

label2 = tk.Label(window, text="지역", relief='solid', height=2)
label2.place(x=30, y=13)

button = tk.Button(window, text="선택하시오 ▼", relief='solid',width=20,height=2)
button.place(x=59, y=13)

button2 = tk.Button(window,  text='실행', relief='groove', fg='red', width=5, height=2)
button2.place(x=360, y=15)

label3 = tk.Label(window, relief='solid', text='마스크 이미지', width=55, height=16)
label3.place(x=12, y=65)

#작은거 3개
label4 = tk.Label(window, relief='solid', text='미세먼지 수치:', anchor='w',padx=5, width=35, height=4)
label4.place(x=450, y=60)

label5 = tk.Label(window, relief='solid', text='초미세먼지', width=35,height=4)
label5.place(x=450, y=150)

label6 = tk.Label(window, relief='solid', text='감기 환자 수 증가량', width=35,height=4)
label6.place(x=450, y=240)


window.mainloop() #종료할때까지 유지
